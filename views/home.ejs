<!-- Include the settings and styling by connecting to the file header.ejs -->
<%- include("./partials/header"); -%>
    <h1>Home</h1>   
    <p><%= startingContent %></p>
    
    <!-- <% console.log(posts) %> -->

    <% posts.forEach(function(post) { %>
        <h1><%= post.title %></h1>
        <p>
        <%= post.content.substring(0, 100) + "..." %>
        <!-- To add the read more href tag just after the post, add it in the same p tags -->
        <a href="/posts/<%= post.title %>">Read More</a>
        </p>

    <% }); %>

<%- include("./partials/footer"); -%>