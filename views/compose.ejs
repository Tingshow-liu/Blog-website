<%- include("./partials/header"); -%>
    <h1>Compose</h1>   
    <!-- Add the form to be submitted to this ejs file -->
    <!-- action="index.html": The route we'll handle in app.js --> 
    <form class="" action="/compose" method="post">
        <!-- "Group" labels and inputs together to line up the boxes and the words with bootstrap -->
        <!-- Need to set the below items to group to: class="form-control" to use "form-group" -->
        <div class="form-group">
            <!-- The tag "label" lets users know what to enter in each of the textarea -->
            <label>Title</label> 
            <!-- name="paragraph": In order for us to tap into the value of the input entered by the user -->
            <input class="form-control" type="text" name="postTitle">
            <!-- The tag "label" lets users know what to enter in each of the textarea -->
            <label>Post</label> 
            <!-- The tag "textarea" enables muli-line inputs (set the height/width of the text area with "rows" & "cols") -->
            <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>  
        </div>
        <!-- type="submit": When an user clicks the button, all the content in the form will be submitted -->
        <button class="btn btn-primary" type="submit">Publish</button>
    </form>
<%- include("./partials/footer"); -%>